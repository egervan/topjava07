<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <display-name>Topjava</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.DeleteMealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteMealServlet</servlet-name>
        <url-pattern>/deleteMeal</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>createMealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.CreateMealServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createMealServlet</servlet-name>
        <url-pattern>/createMeal</url-pattern>
    </servlet-mapping>

</web-app>
